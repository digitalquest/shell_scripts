#!/bin/sh
cd $HOME/public_html

#keep the standard Moodle branches at actechlab Github repository synced with the upstream repository.
#oringin is git@actechlab.warwick.ac.uk:uxxxxxxxx/moodle.git
#upstream is git://git.moodle.org/moodle.git
git fetch upstream
for BRANCH in MOODLE_{19..27}_STABLE master; do
       git push origin refs/remotes/upstream/$BRANCH:$BRANCH
done
